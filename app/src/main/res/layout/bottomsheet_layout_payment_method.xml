<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingTop="4dp"
    android:paddingEnd="24dp"
    android:paddingBottom="24dp">


    <ImageView
        android:layout_width="56dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:alpha="0.5"
        android:contentDescription="@string/bottom_sheet_drag_handle"
        android:src="@drawable/ic_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:fontFamily="@font/cera_pro_light"
        android:gravity="center_horizontal"
        android:text="@string/enter_payment_details"
        android:textSize="14sp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_no_required_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/cera_pro_medium"
        android:text="No required payment details needed for this method"
        android:textAlignment="center"
        android:textColor="@color/textOnBackground"
        android:textSize="16sp"
        android:visibility="gone" />

    <!--    Pay in section - fields-->

    <LinearLayout
        android:id="@+id/layout_pay_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:orientation="vertical">


    </LinearLayout>


    <Space
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="24dp" />


    <!--    Pay out section - fields-->

    <LinearLayout
        android:id="@+id/layout_pay_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:orientation="vertical">


    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/primaryBtnBackgroundTint"
        android:fontFamily="@font/cera_pro_medium"
        android:minHeight="56dp"
        android:text="@string/update"
        android:textColor="@color/primaryBtnTextOnBackground"
        android:textSize="16sp" />
</LinearLayout>