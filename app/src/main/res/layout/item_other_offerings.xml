<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivFlag"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/country_flag" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPfiProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cera_pro_light"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="AquaFinance financial" />

        <TextView
            android:id="@+id/tvValueDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/cera_pro_light"
            android:textSize="11sp"
            android:textStyle="bold"
            tools:text="(1USD gets 24NGN)"
            android:text="" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvBestOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/cera_pro_medium"
            android:text="Best offer"
            android:textColor="@color/green_offers"
            android:textSize="12sp"
            android:visibility="invisible"
            tools:text="Best offer" />

        <TextView
            android:id="@+id/tvBestRated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:visibility="invisible"
            android:textColor="@color/orange_warning"
            android:fontFamily="@font/cera_pro_light"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="Best rated" />
    </LinearLayout>

</LinearLayout>