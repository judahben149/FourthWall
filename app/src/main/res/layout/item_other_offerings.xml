<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivFlag"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/country_flag" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPfiProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cera_pro_light"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="AquaFinance financial" />

        <TextView
            android:id="@+id/tvValueDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/cera_pro_light"
            android:textSize="11sp"
            android:textStyle="bold"
            tools:text="(1USD gets 24NGN)"
            android:text="" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvBestOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/cera_pro_medium"
            android:text="Best offer"
            android:textColor="@color/green_offers"
            android:textSize="12sp"
            android:visibility="invisible"
            tools:text="Best offer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvPfiNoRating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1.5"
                android:maxLines="1"
                android:fontFamily="@font/cera_pro_medium"
                android:textColor="@color/textOnBackground"
                android:alpha="0.4"
                android:textAlignment="textEnd"
                android:textSize="12sp"
                android:visibility="gone"
                android:text="No rating" />

            <TextView
                android:id="@+id/tvPfiRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:fontFamily="@font/cera_pro_medium"
                android:textColor="@color/shaded_base_purple"
                android:textSize="16sp"
                android:visibility="gone"
                tools:text="3" />

            <ImageView
                android:id="@+id/ivPfiRating"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_star"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>