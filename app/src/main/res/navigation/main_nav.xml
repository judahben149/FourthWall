<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.judahben149.fourthwall.presentation.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_offeringsFragment"
            app:destination="@id/offeringsFragment" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.judahben149.fourthwall.presentation.dashboard.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" />
    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.judahben149.fourthwall.presentation.orders.OrdersFragment"
        android:label="fragment_orders"
        tools:layout="@layout/fragment_orders" />
    <fragment
        android:id="@+id/offeringsFragment"
        android:name="com.judahben149.fourthwall.presentation.exchange.OfferingsFragment"
        android:label="fragment_offerings"
        tools:layout="@layout/fragment_offerings" >
        <action
            android:id="@+id/action_offeringsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>